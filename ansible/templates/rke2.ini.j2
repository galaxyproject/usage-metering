# The file is automatically generated by Ansible by running the
# cluster.yml playbook.
[localhost]
127.0.0.1 ansible_connection=local ansible_python_interpreter="/usr/bin/python"

[controllers]
{% for item in os_controllers.results %}
{{ item.server.name }} ansible_ssh_host={{ item.server.interface_ip }}
{% endfor %}

[agents]
{% for item in os_agents.results %}
{{ item.server.name }} ansible_ssh_host={{ item.server.interface_ip }}
{% endfor %}

[nodes:children]
controllers
agents

[rke_cluster:children]
controllers
agents

[all:vars]
ansible_ssh_port=22
ansible_user='ubuntu'
ansible_ssh_extra_args='-o StrictHostKeyChecking=no'
ansible_ssh_private_key_file=~/.ssh/{{ keypair }}.pem
ansible_python_interpreter="/usr/bin/python3"

